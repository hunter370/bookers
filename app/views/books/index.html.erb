<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td>Show</td>
    <td>Edit</td>
    <td>Destroy</td>
  </tr>
  <% end %>
</table>

<h1>New Book</h1>
<%= form_with model: Book.new do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>